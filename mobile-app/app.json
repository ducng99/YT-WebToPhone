{
  "expo": {
    "name": "YT Web2Phone",
    "slug": "yt-web2phone",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "bundleIdentifier": "dev.web2phone.YTWeb2Phone",
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Camera is used for QR code scanner",
        "NSMicrophoneUsageDescription": "Microphone is used for QR code scanner",
        "UIBackgroundModes": ["remote-notification"]
      }
    },
    "android": {
      "package": "dev.ducng.YTWeb2Phone",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "permissions": ["CAMERA"],
      "googleServicesFile": "./google-services.json"
    }
  }
}
